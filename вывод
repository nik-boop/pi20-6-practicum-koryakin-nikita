v = "|*****||*****||*****||*****|"
pl=['I','II','III']
print(v)
def vvd(v,pl):
    
    for i in range(len(v)):
        if i%7 == 0:
            for j in range(i,i+7):
                print(v[j],' ',end=' '); 
            if i < 21:
                print("Игрок",str(pl[i//7]), " :",sep='')
            print()

vvd(v,pl)
k = 1 
